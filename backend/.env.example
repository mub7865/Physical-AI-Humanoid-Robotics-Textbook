# Rename this file to .env and fill in your actual credentials
# DO NOT commit the .env file with real credentials!

# ======================
# Database Configuration
# ======================

# Neon Postgres Database URL
# Example: "postgresql://user:password@host:port/dbname?sslmode=require"
NEON_DB_URL="postgresql://user:password@your-neon-host.neon.tech/dbname?sslmode=require"

# ======================
# Vector Database (RAG)
# ======================

# Qdrant Vector Database URL
# Example: "http://localhost:6333" or your Qdrant Cloud URL
QDRANT_URL="https://your-qdrant-cluster.cloud.qdrant.io"

# Qdrant API Key (if using Qdrant Cloud with authentication)
QDRANT_API_KEY="your-qdrant-api-key"

# ======================
# AI Services
# ======================

# OpenAI API Key (for chat, personalization, and translation)
OPENAI_API_KEY="sk-your-openai-api-key"

# ======================
# Authentication (NEW)
# ======================

# JWT Secret Key for token signing
# Generate a secure random string (e.g., openssl rand -hex 32)
JWT_SECRET_KEY="your-secure-random-secret-key-at-least-32-chars"

# JWT Token Expiry (in days, default: 7)
JWT_EXPIRE_DAYS=7

# ======================
# Application Settings
# ======================

# Frontend URL (for CORS configuration)
FRONTEND_URL="http://localhost:3000"

# API Rate Limiting (requests per minute)
AUTH_RATE_LIMIT=5
TRANSLATE_RATE_LIMIT=20


